<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="id.fauzanag.imessages">
    <!-- Internet -->
    <uses-permission android:name="android.permission.INTERNET" /> <!-- External Storage -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/background_icon_imessage"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/background_icon_imessage"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name=".chatactivity.ChatActivity"
            android:theme="@style/AppTheme.NoActionBar2"
            android:parentActivityName=".homechat.HomeChatActivity"/>
        <activity
            android:name=".chatactivity.ProfileActivity" />
        <activity
            android:name=".chatactivity.FindFriendsActivity"
            android:parentActivityName=".homechat.HomeChatActivity"
            android:theme="@style/AppTheme.NoActionBar2" />
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/Base.Theme.AppCompat" />
        <activity
            android:name=".chatactivity.GroupChatActivity"
            android:theme="@style/AppTheme.NoActionBar2" />
        <activity
            android:name=".createuser.ProfileCreateActivity"
            android:theme="@style/AppTheme.NoActionBar2"/>
        <activity
            android:name=".createuser.CodeNumber"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".termconditions.TermAndConditions"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".createuser.PhoneNumber"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".homechat.HomeChatActivity" />
        <activity
            android:name=".splashscreen.SplashScreenActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>